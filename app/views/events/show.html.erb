
<div class="container-fluid">
<h1>Event Details</h1>
<div class="row">
  <div class="span10 well">
    <p>
      <strong>Customer: <%= @event.customer.full_name %></strong>
    </p>
    <p>
      <strong>Event Date:</strong>
  	  <%= @event.event_date %>
    </p>
    <p>
      <strong>Notes:</strong>
  	  <%= @event.notes %>
    </p>
    <p>
      <strong>Room:</strong>
  	  <%= @event.room_id %>
    </p>

    <p>
      <strong>Account Number:</strong>
  	  <%= @event.customer.account_number %>
    </p>
  
    <p>
      <strong>Address:</strong>
  	  <%= @event.customer.address %>
    </p>
  
    <p>
      <strong>City:</strong>
  	  <%= @event.customer.city %>
    </p>
  
    <p>
      <strong>Postal Code:</strong>
  	  <%= @event.customer.pcode %>
    </p>
  
    <p>
      <strong>State:</strong>
  	  <%= @event.customer.state %>
    </p>
  
    <p>
      <strong>Phone Number:</strong>
  	  <%= @event.customer.phone_number %>
    </p>
  
    <p>
      <strong>Email:</strong>
  	  <%= @event.customer.email %>
    </p>
  
    <p>
      <strong>Comments:</strong>
  	  <%= @event.customer.comments %>
    </p>
  </div>
  <div class="span6">
    <h3>Times</h3>
    <ul>
      <% @event.time_markers.each do |marker| %>
        <li><%= has_time(marker.marker) %></li>
      <% end %>
    <ul>
  </div>
</div>
<p>
  <%= link_to "Destroy", @event, :confirm => 'Are you sure?', :method => :delete, :class => 'btn float-right' %> |
  <%= link_to "View All", root_path, :class => 'btn float-right' %>
</p>
</div>
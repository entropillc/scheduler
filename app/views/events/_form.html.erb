<%= error_messages_for @event %>
<%= form_for @event do |f| %>
	<fieldset>
	  <div class="clearfix">
	    <%= f.label :customer %>
	    <div class="input">
	      <%= f.text_field :customer, :class => "xxlarge" %>
	    </div>
	  </div>
	  <div class="clearfix">
	    <%= f.label :event_date %>
	    <div class="input">
	      <%= f.date_select :event_date, :class => "xxlarge" %>
	    </div>
	  </div>
	  <div class="clearfix">
	    <%= f.label :notes %>
	    <div class="input">
	      <%= f.text_area :notes, :class => "xxlarge" %>
	    </div>
	  </div>
	  <div class="clearfix">
	    <%= f.label :room_id %>
	    <div class="input">
	      <%= f.number_field :room_id, :class => "xxlarge" %>
	    </div>
	  </div>
	  <div class="actions">
	    <%= f.submit :class => "btn primary float-right"%>
	  </div>
	<fieldset>
<% end %>